package mypac;

import java.util.Scanner;

public class Test {

	public static void main(String[] args) {
		Scanner sc =new Scanner(System.in);
		int i,j,n;
		System.out.println("enter no. of lines");
		n=sc.nextInt();
		for(i=1;i<=n;i++)
		{
			for(j=i;j<=n-i;j++)
			{
				System.out.print(" ");
			}
			for(j=i;j>=1;j--)
			{
				System.out.print(j+" ");
			}
			for(j=1;j<=i;j++)
			{
				System.out.print(j+ " ");
			}	
			System.out.println();
		}
	
		
	}

}
